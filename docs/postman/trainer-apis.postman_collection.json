{
  "info": {
    "name": "Unified Trainer API",
    "description": "Calls for the PyTorchJob-based Training API (health, submit, status).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Unified Trainer",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{trainer_base_url}}/healthz"
          }
        },
        {
          "name": "Submit Training Job",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "X-TRAINER-TOKEN", "value": "{{trainer_api_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"framework\": \"hf\",\n  \"model_id\": \"meta-llama/Llama-3-8B\",\n  \"run_id\": \"hf-demo-001\",\n  \"num_nodes\": 2,\n  \"gpus_per_node\": 8,\n  \"cpus_per_node\": 48,\n  \"memory_per_node_gb\": 512,\n  \"image\": \"docker.io/your-org/training-api:latest\",\n  \"checkpoint_base_uri\": \"s3://deepfinery-training/runs\",\n  \"dataset_uri\": \"s3://deepfinery-datasets/fraud/demo.jsonl\",\n  \"resume_from_checkpoint\": true,\n  \"extra_args\": {\n    \"dataset_text_field\": \"text\",\n    \"max_steps\": 50000,\n    \"lr\": 3e-5,\n    \"batch_size\": 128,\n    \"save_steps\": 500,\n    \"eval_steps\": 500\n  },\n  \"env\": {\n    \"EXPERIMENT_NAME\": \"hf-demo\"\n  }\n}"
            },
            "url": "{{trainer_base_url}}/train"
          }
        },
        {
          "name": "Get Job Status",
          "request": {
            "method": "GET",
            "header": [
              { "key": "X-TRAINER-TOKEN", "value": "{{trainer_api_token}}" }
            ],
            "url": "{{trainer_base_url}}/train/{{trainer_job_name}}"
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "trainer_base_url", "value": "http://localhost:8000" },
    { "key": "trainer_api_token", "value": "trainer-demo-token" },
    { "key": "trainer_job_name", "value": "hf-demo-001" }
  ]
}
